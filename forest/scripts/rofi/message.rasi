/* Confirm Dialog */

* {
  al:   #00000000;
  bg:   #282828FF;
  bga:  #313131FF;
  fg:   #EBDBB2FF;
  ac:   #FB4934FF;
  se:   #8EC07CFF;
}
//@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"Pango DejaVu Sans Mono 12";
}

window {
    width:      			320px;
    padding:    			25px;
    border:					0px 0px 1px 0px;
    border-radius:          0px;
    border-color:           @se;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
